#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# Adapted from: https://github.com/dylanaraps/wal

# Source generated colors.
source "$HOME/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst && \
        dunst \
            -lb "$color15" \
            -lf "$color0"  \
            -lfr "$color0" \
            -nb "$color15" \
            -nf "$color0"  \
            -nfr "$color0" \
            -cb "$color15" \
            -cf "$color9"  \
            -cfr "$color9" &
}

reload_bar() {
    ./"$HOME/bin/scripts/launch_polybar.sh"
}

main() {
    reload_dunst &
    reload_bar &
}

main >/dev/null 2>&1
